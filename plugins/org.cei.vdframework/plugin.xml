<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.polarsys.capella.CapellaSim.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="org.polarsys.capella.CapellaSim.commands.category"
            defaultHandler="org.polarsys.capella.capellasim.handlers.SampleHandler"
            id="org.polarsys.capella.CapellaSim.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.polarsys.capella.capellasim.handlers.SampleHandler"
            commandId="org.polarsys.capella.CapellaSim.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.polarsys.capella.CapellaSim.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.polarsys.capella.CapellaSim.menus.capellaSim"
               label="Capella Simulator"
               mnemonic="M">
            <command
                  commandId="org.polarsys.capella.CapellaSim.commands.sampleCommand"
                  id="org.polarsys.capella.CapellaSim.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.polarsys.capella.CapellaSim.toolbars.sampleToolbar">
            <command
                  id="org.polarsys.capella.CapellaSim.toolbars.sampleCommand"
                  commandId="org.polarsys.capella.CapellaSim.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
