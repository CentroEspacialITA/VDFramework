<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.cei.vdframework.commands.category"
            name="VD Simulator Framework">
      </category>
      <command
            categoryId="org.cei.vdframework.commands.category"
            name="Initialize"
            id="org.cei.vdframework.core.commands.init">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.cei.vdframework.core.handlers.FrameworkHandler"
            commandId="org.cei.vdframework.core.commands.init">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.cei.vdframework.core.commands.init"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.cei.vdframework.core.menus"
               label="CEI VD"
               mnemonic="M">
            <command
                  commandId="org.cei.vdframework.core.commands.init"
                  id="org.cei.vdframework.core.menus.init"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.cei.vdframework.core.toolbar">
            <command
                  id="org.cei.vdframework.core.toolbar.init"
                  commandId="org.cei.vdframework.core.commands.init"
                  icon="icons/sample.png"
                  tooltip="Initialize the VD Framework">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
